@model Category
@{
    ViewData["Title"] = "Create";
}
<h1>create a new category</h1>
<form method="post">
    <div class="border p-3 mt-3">
        <div class="row pb-2">
            <h2 class="text-primary"> Add a New category</h2>
        </div>



        <div asp-validation-summary="All"></div>



        <div class="mb-3">
            <label asp-for="Name" class=" form-label"></label>
            <input asp-for="Name" class=" form-control"></input>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <button type="submit" class=" btn btn-outline-primary"> Submit </button>


        <a asp-controller="Category" asp-action="Index" class=" btn btn-secondary"> Return to items </a> <!--gives you a link to the page the button will go to after clicking in it -->
    </div>

</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" /> <!--to put all the validations in the validationScriptsPartoal in one go -->
}
