@model Items
@{
    ViewData["Title"] = "Delete";
}


<h1>Delete Item</h1>


<form method="post">
    <div class="border p-3 mt-3">


        <div class="row pb-2">
            <h2 class="text-primary"> Are you sure you want to delete this item ?? :</h2>
        </div>


        <div asp-validation-summary="All"></div>
        <button type="submit" class=" btn btn-outline-danger"> bye bye </button>
        <a asp-controller="Item" asp-action="Index" class=" btn btn-secondary"> Return to items </a> <!--gives you a link to the page the button will go to after clicking in it -->
    

    </div>

</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" /> <!--to put all the validations in the validationScriptsPartoal in one go -->
}